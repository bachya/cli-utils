#!/usr/bin/env ruby
require 'cli-manager.rb'

include CLIManager::Messenging

file_logger = Logger.new('test.txt')
file_logger2 = Logger.new('test2.txt')
file_logger2.level = Logger::Severity::ERROR

messenger.info('This is a really long info string that should wrap itself at some point.')
messenger.attach(file_logger)
messenger.attach(file_logger2)
messenger.warn('test')
messenger.success('test')
messenger.detach(file_logger)
messenger.section('test')